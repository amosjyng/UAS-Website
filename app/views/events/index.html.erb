<% @events.each_with_index do |event, i| %>
  <%= render :partial => 'show_event',
              :locals => { :event => event, :summarize => true } %>
  <%= "<hr>".html_safe unless i + 1 == @events.length %>
<% end %>

<% if can_edit? %>
  <hr />

  <br />
    
  <%= link_to 'New Event', new_event_path, :class => 'admin' %>

<% end %>
