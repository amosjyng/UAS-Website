<% unless notice.nil? || notice == '' %>
  <div id="notice" class="no_ul"><%= notice %></div>
<% end %>

<div id="officer_image">
  <%= image_tag @officer.avatar.url, :width => "100%", :height => "100%" %>
</div>

<p>
  <b>Name:</b>
  <%= @officer.name %>
</p>

<p>
  <b>Position:</b>
  <%= @officer.position %>
</p>

<p>
  <b>Email:</b>
  <%= @officer.email %>
</p>

<%= link_to 'Back', officers_path %>
<% if can_edit? @officer %>
  | <%= link_to 'Edit', edit_officer_path(@officer), :class => "admin" %>
<% end %>